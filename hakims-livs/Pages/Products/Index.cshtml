@page
@using hakims_livs.Models
@model hakims_livs.Pages.Products.IndexModel
@inject SignInManager<Customer> SignInManager
@inject UserManager<Customer> UserManager

@{
    ViewData["Title"] = "Index";
}

<h1>Produkter</h1>

<p>
    @if (User.IsInRole("admin"))
    {
        <a asp-page="Create">Skapa en ny Produkt</a>

    }
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Product[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product[0].SalesPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product[0].Stock)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product[0].Volume)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product[0].CreatedDateTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product[0].Unit)
            </th>
            <th>
                
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Product)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SalesPrice)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Stock)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Volume)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedDateTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Unit)
                </td>
                <td class="icon-controls">

                    <a class="btn-sm btn-primary" asp-page="./Details" asp-route-id="@item.ID">Detaljer</a>

                    @if (User.IsInRole("admin"))
                    {
                        <a class="btn-sm btn-primary" asp-page="./Edit" asp-route-id="@item.ID">Ã„ndra</a>
                        <a class="btn-sm btn-danger" asp-page="./Delete" asp-route-id="@item.ID">Ta bort</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
