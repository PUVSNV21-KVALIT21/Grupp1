@page
@using hakims_livs.Models
@model hakims_livs.Pages.Products.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Product</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form id="product-form" enctype="multipart/form-data" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Product.Name" class="control-label"></label>
                <input asp-for="Product.Name" class="form-control" />
                <span asp-validation-for="Product.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Description" class="control-label"></label>
                <input asp-for="Product.Description" class="form-control" />
                <span asp-validation-for="Product.Description" class="text-danger"></span>
            </div>
            <div>
                            <label asp-for="Product.Image" style="width: 100%;"></label>
                            @if (Model.Product != null)
                            {
                                <img id="productImage" style="width:350px;height:350px; object-fit:cover" src="~/images/@Model.Product.Image">
                            }
                            else
                            {
                                <img id="productImage" style="width:350px;height:350px; object-fit:cover" src="~/assets/ProductPlaceholder.svg">
                            }
                            <input type="file"
                                   accept=".png,.jpg,.jpeg,.gif,.tif"
                                   asp-for="Product.Image"
                                   style="border:0px!important;padding: 0px;padding-top: 10px;padding-bottom: 30px;"
                                   onchange="document.getElementById('productImage').src = window.URL.createObjectURL(this.files[0])" />
                            <span asp-validation-for="Product.Image" class="text-danger"></span>
                        </div>
            
            <div class="form-group">
                <label asp-for="Product.SalesPrice" class="control-label"></label>
                <input asp-for="Product.SalesPrice" class="form-control" />
                <span asp-validation-for="Product.SalesPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Stock" class="control-label"></label>
                <input asp-for="Product.Stock" class="form-control" />
                <span asp-validation-for="Product.Stock" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Volume" class="control-label"></label>
                <input asp-for="Product.Volume" class="form-control" />
                <span asp-validation-for="Product.Volume" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Unit"></label>
                <select class="form-control" asp-for="Product.Unit"
                        asp-items="Html.GetEnumSelectList<Unit>()">
                    <option>Select type ...</option>
                </select>
                <span asp-validation-for="Product.Unit" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Categories</label>
                <select class="form-control" asp-for="SelectedCategories" asp-items="Model.CategoryOptions"></select>
            </div>
            <div class="form-group">
                <label asp-for="Product.IsEco" class="control-label">Is Eco</label>
                <input asp-for="Product.IsEco" type="checkbox" value="true" name="Product.IsEco" />
                <input type="hidden" value="false" name="Product.IsEco" />
            </div>
            <div class="form-group">
                <label asp-for="Product.IsVegan" class="control-label">Is Vegan</label>
                <input asp-for="Product.IsVegan" type="checkbox" value="true" name="Product.IsVegan" />
                <input type="hidden" value="false" name="Product.IsVegan" />

            </div>
            <div class="form-group">
                <label asp-for="Product.IsGluten" class="control-label">Is Gluten</label>
                <input asp-for="Product.IsGluten" type="checkbox" value="true" name="Product.IsGluten" />
                <input type="hidden" value="false" name="Product.IsGluten" />

            </div>
            <div class="form-group">
                <label asp-for="Product.ExpiryDate" class="control-label"></label>
                <input asp-for="Product.ExpiryDate" class="form-control" />
                <span asp-validation-for="Product.ExpiryDate" class="text-danger"></span>

            </div>
            <div class="form-group">
                <label asp-for="Product.Brand" class="control-label"></label>
                <input asp-for="Product.Brand" class="form-control" />
                <span asp-validation-for="Product.Brand" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Origin" class="control-label"></label>
                <input asp-for="Product.Origin" class="form-control" />
                <span asp-validation-for="Product.Origin" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

