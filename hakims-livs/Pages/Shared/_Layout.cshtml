@using Microsoft.AspNetCore.Identity
@using hakims_livs.Models
@inject SignInManager<Customer> SignInManager
@inject UserManager<Customer> UserManager

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Hakims Livs</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>

<body>
    <div id="modal-container"></div>
    <div id="site">
        <header>
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
                <div class="container">
                    <a class="navbar-brand" asp-area="" asp-page="/Index"><img src="/assets/hakimlogo_small.png" class="logo" alt=""></a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                            aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav flex-grow-1">
                           <li class="nav-item">
                                <form id="searchForm">
                                    <label for="searchInput"></label>
                                    <input type="text" placeholder="Sök..." id="searchInput" />
                                </form>
                            </li>
                            <li class="nav-item">
                                @if (User.IsInRole("admin"))
                                {
                                    <a class="nav-link text-dark" asp-area="" asp-page="/Orders/Index">Alla Beställningar</a>
                                    
                                }
                                else if (SignInManager.IsSignedIn(User))
                                {
                                    <a class="nav-link text-dark" asp-area="" asp-page="/Orders/Index">Mina Beställningar</a>
                                }
                            </li>
                            <li class="nav-item">
                                @if (User.IsInRole("admin"))
                                {
                                    <a class="nav-link text-dark" asp-area="" asp-page="/Customers/Index">Kunder</a>
                                }
                            </li>
                            <li class="nav-item">
                                @if (User.IsInRole("admin"))
                                {
                                    <a class="nav-link text-dark" asp-area="" asp-page="/Products/Index">Produkter</a>
                                }
                            </li>
                            <li class="nav-item">
                                @if (User.IsInRole("admin"))
                                {
                                    <a class="nav-link text-dark" asp-area="" asp-page="/Categories/Index">Kategorier</a>
                                }
                            </li>
                        </ul>
                        @if (!User.IsInRole("admin"))
                        {
                            <div class="shoppingcart">
                                <a class="nav-link text-dark" asp-area="" asp-page="/Checkout/Index" id="checkoutButton">Till kassan</a>
                                <span class="badge pull-right shoppingCart-counter">
                                </span>
                            </div>
                        }

                        <partial name="_LoginPartial" />
                    </div>
                </div>
            </nav>
        </header>
        <div class="main-grid">
            <partial name="_SidebarPartial" />
            <div class="container">
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>
        </div>

        <footer class="border-top footer text-muted">
            <div class="container">
                &copy; 2022 - Hakims Livs - <a asp-area="" asp-page="/Privacy">Privacy</a>
            </div>
        </footer>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script type="module" src="~/js/site.js" defer asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
